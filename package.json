{
  "name": "@my/tslint-misc-rules",
  "version": "1.0.0",
  "description": "Collection of miscellaneous TSLint rules",
  "main": "index.js",
  "scripts": {
    "build": "tsc --inlineSourceMap",
    "ci": "yarn build && yarn test",
    "lint": "tslint rules/*.ts helpers/*.ts && prettier --list-different \"**/*.ts\"",
    "format": "prettier --write \"**/*.ts\"",
    "precommit": "lint-staged",
    "test": "node test/runner.js",
    "watch": "tsc --watch & node test/watch",
    "prepublish": "npm run build"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jwbay/tslint-misc-rules.git"
  },
  "keywords": [
    "tslint",
    "rules",
    "jsx",
    "tsx",
    "typescript",
    "lint"
  ],
  "author": "Justin Bay",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jwbay/tslint-misc-rules/issues"
  },
  "homepage": "https://github.com/jwbay/tslint-misc-rules#readme",
  "dependencies": {
    "detect-newline": "^2.1.0"
  },
  "peerDependencies": {
    "tslint": "^5.0.0",
    "typescript": ">=2.1 <=2.7"
  },
  "devDependencies": {
    "@types/node": "^7.0.28",
    "chokidar": "^1.6.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.1.3",
    "prettier": "^1.10.2",
    "tslint": "^5.0.0",
    "typescript": "^2.7.2"
  }
}
